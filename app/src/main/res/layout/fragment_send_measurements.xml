<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.measurements.SendMeasurementsFragment">

    <TextView
        android:id="@+id/textViewBlood"
        android:layout_width="155dp"
        android:layout_height="49dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:text="0"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textViewHeadbeat"
        android:layout_width="155dp"
        android:layout_height="49dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:text="0"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:text="Blood Oxygen"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="120dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="44dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:text="Heartbeat"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewHeadbeat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="38dp"
        android:textColor="@color/black"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="16dp"
        android:text="Are you tired?"
        android:textSize="17dp"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxTired"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRandomValue" />

    <CheckBox
        android:id="@+id/checkBoxTired"
        android:layout_width="82dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="17dp"
        android:text="Yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeadbeat" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="39dp"
        android:textColor="@color/black"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp"
        android:textSize="17dp"
        android:text="Do you have insomnia?"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxinsomnia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <CheckBox
        android:id="@+id/checkBoxinsomnia"
        android:layout_width="82dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="17dp"
        android:text="Yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxTired" />

    <Button
        android:id="@+id/buttonRandomValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="123dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="123dp"
        android:text="Ramdom Values"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBlood" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="37dp"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:text="Do you have dizziness?"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxdiziness"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <CheckBox
        android:id="@+id/checkBoxdiziness"
        android:layout_width="82dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="17dp"
        android:text="Yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxinsomnia" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:freezesText="false"
        android:text="Do you have headaches?"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxHeadaches"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <CheckBox
        android:id="@+id/checkBoxHeadaches"
        android:layout_width="82dp"
        android:layout_height="51dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="17dp"
        android:text="Yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxdiziness" />

    <Button
        android:id="@+id/RegisterMeasurementButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="178dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="96dp"
        android:text="Register Measurement"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.646"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.282" />
</androidx.constraintlayout.widget.ConstraintLayout>