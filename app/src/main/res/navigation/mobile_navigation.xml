<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.climbing.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_percursos"
            app:destination="@id/percursos" />
        <action
            android:id="@+id/action_navigation_home_to_participantesFragment2"
            app:destination="@id/participantesFragment2" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.climbing.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.climbing.ui.notifications.ProfileFragment"
        android:label="@string/title_Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/percursos"
        android:name="com.example.climbing.ui.home.Percursos"
        android:label="fragment_percursos"
        tools:layout="@layout/fragment_percursos">
        <action
            android:id="@+id/action_percursos_to_newPercursoFragment"
            app:destination="@id/newPercursoFragment" />
        <action
            android:id="@+id/action_percursos_to_percursoDetailFrafment"
            app:destination="@id/percursoDetailFrafment" />
    </fragment>
    <fragment
        android:id="@+id/newPercursoFragment"
        android:name="com.example.climbing.ui.home.New_percursoFragment"
        android:label="New Route"
        tools:layout="@layout/fragment_new_percurso"/>
    <fragment
        android:id="@+id/percursoDetailFrafment"
        android:name="com.example.climbing.ui.home.PercursoDetailFragment"
        android:label="Detalhe de Percurso"
        tools:layout="@layout/fragment_participantes" >
        <argument android:name="id_percurso"
            app:argType="string" />
        <action
            android:id="@+id/action_percursoDetailFrafment_to_selectParticipanteFragment"
            app:destination="@id/selectParticipanteFragment" />
    </fragment>
    <fragment
        android:id="@+id/new_participanteFragment"
        android:name="com.example.climbing.ui.home.New_participanteFragment"
        android:label="fragment_new_participante"
        tools:layout="@layout/fragment_new_participante" />
    <fragment
        android:id="@+id/selectParticipanteFragment"
        android:name="com.example.climbing.ui.home.SelectParticipanteFragment"
        android:label="SelectParticipanteFragment" >
        <action
            android:id="@+id/action_selectParticipanteFragment_to_new_participanteFragment"
            app:destination="@id/new_participanteFragment" />
        <argument
            android:name="id_percurso"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/participantesFragment2"
        android:name="com.example.climbing.ui.home.ParticipantesFragment"
        android:label="ParticipantesFragment" />
</navigation>